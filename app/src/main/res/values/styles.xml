<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Gotham_Light">
        <item name="fontType">Gotham_Light</item>
    </style>

    <style name="Gotham_Book">
        <item name="fontType">Gotham_Book</item>
    </style>

    <style name="Gotham_Medium">
        <item name="fontType">Gotham_Medium</item>
    </style>

    <style name="Gotham_Bold">
        <item name="fontType">Gotham_Bold</item>
    </style>

    <style name="Gothan_BookItalic">
        <item name="fontType">Gotham_BookItalic</item>
    </style>

    <style name="Gotham_Black">
        <item name="fontType">Gotham_Black</item>
    </style>

    <style name="Brown_Bag">
        <item name="fontType">Brown_Bag</item>
    </style>

    <style name="LoginSignUp1Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textCursorDrawable">@drawable/loginsignup_color_cursor</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="delivery">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@drawable/loginsignup_color_cursor</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="LoginSignUp1Input2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@drawable/loginsignup_color_cursor</item>
    </style>

    <style name="LoginSignUp1Input3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@drawable/loginsignup_color_cursor</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ButtonOrange" parent="@android:style/Widget.Button">
        <item name="android:background">@color/button_orange</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
